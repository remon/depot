<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b>
  <%= sanitize(@product.description) %>
</p>

<p>
<%= image_tag(@product.photo.url(:medium)) %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |

